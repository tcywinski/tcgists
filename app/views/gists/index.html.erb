<div class="header">
  <div class="hws">
    <h1>Hello world Snippets</h1></br>
  </div>
  <div class="buttons" style:"float: right;  margin-right: 4%">
    <%= link_to 'New Gist', new_gist_path, class:"btn btn-success newgist" %>

    <form class="navbar-form navbar-left pull-right" role="search" action="/gists/search">
          <div class="form-group">
            <%= form_tag gists_path, :method => 'get',:class =>"form-search", :id => "gists_search" do %>
            <%= text_field_tag :search, params[:search], :class => 'input-small search-query', :style => 'width: 60%'%>
            <%= submit_tag "Search" , :name => nil, :class => 'btn btn-success btn-md btn-active' %></button>
            <% end %>
           </div>
    </form>
  </div>
</div>
</br></br></br>
<div class="gists">
  <table id="gists">
    <thead>
      <tr>
        <th class="snippeth">Snippet</th>
        <th class="langh">Lang</th>
        <th class="descriptionh">Description</th>
        <th>Options</th>
      </tr>
    </thead>

    <tbody id="my-gists">
      <% #@gists.each do |gist| %>

      <% #end %>
    
      <%= render @gists %>
    </tbody>
  </table>
</div>

  <div id="infinite-scrolling">
  <%= will_paginate @gists %>
  </div>
