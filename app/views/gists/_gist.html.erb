        <tr>
          <td class="snippet">
           
              <% begin %>

                 <%= raw Pygments.highlight(gist.snippet.length > 200 ? gist.snippet[0,200] + "..." : gist.snippet, lexer: gist.lang) %>
                
                <% rescue %>

                 <%= raw Pygments.highlight(gist.snippet.length > 200 ? gist.snippet[0,200] + "..." : gist.snippet) %>

              <% end %>

          </td>
          <td class="lang" ><%= gist.lang %></td>
          <td class="description"><%= gist.description %></td>
          <td class="options">
          
                <a href='/gists/<%= gist.id %>'><button type="button" class="btn btn-default btn-lg" style:"float: left" >
                  <span class="glyphicon glyphicon-eye-open"></span>Show</button>

                <a href='<%= edit_gist_path(gist) %>'><button type="button" class="btn btn-sm btn-success" style:"float: left; width: 302px;" >Edit</button>

                <%= link_to gist, method: :delete, data: {confirm: 'Are you sure?' } do %><button type="button" class="btn btn-sm btn-danger" style:"float: left" >Delete</button><% end %>

          </td>
        </tr>